    Private Sub llenarGrid()
        Try
            Dim consulta = (From x In ctx.tblEnvio_Empresa Select Codigo = x.codigo, Nombre = x.nombre, CodigoCredito = x.codigoCredito).ToList

            grdDatos.DataSource = consulta

        Catch ex As Exception

        End Try
    End Sub

